doctype html
html(lang="en")
  head
    title psimon
    link(rel='stylesheet', href='css/main.css')
  body
    #simon
      .board
        .boardCenter
          .boardCenterInner
            //.bg &Psi;
            .title
              h1
                svg(viewbox="0 0 240 40")
                  title psimon
                  use(xlink:href='#psimonTitle')
            .controls
              .settings
                .strictness
                  label
                    input#psiStrictness(type='checkbox', name='strict')
                    | strict
                .difficulty
                  | difficulty
                  input#psiDifficulty(type='number' min="2" max="24" value="7" name="shoe-size")
                .levelBar
                  .timer
                  .level
                    |level:
                    span#psiLevel 1
              .actions
                button#psiStart start
                button#psiReset reset 
              .messages
        .buttonsContainer
      .stats  
    include svg/psimon3.svg
    script(src='js/bundle.js')
    

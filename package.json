{
  "name": "simon",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcardellini/psimon"
  },
  "scripts": {
    "lint": "jshint src/js",
    "prebuild:styles": "rimraf public/css",
    "prebuild:scripts": "npm run lint && rimraf public/js",
    "build": "npm run build:scripts && npm run build:styles && npm run build:markup ",
    "build:markup": "jade src -o public ",
    "build:styles": "mkdir public\\css && lessc src/less/main.less | postcss --use autoprefixer --autoprefixer.browsers \"> 3% in US\" --use postcss-font-magician | cleancss -o public/css/main.css --s1",
    "build:scripts": "mkdir public\\js && browserify src/js/app.js -d -o public/js/bundle.js",
    "build:scripts2": "mkdir public\\js && browserify src/js/app.js -t [ babelify --presets [ es2015 ] ] | uglifyjs -mc > public/js/bundle.js",
    "test": "mocha -w test/test.js",
    "watch": "parallelshell \"npm run watch:styles\" \"npm run watch:scripts\" \"npm run watch:markup\"",
    "watch:markup": "npm run build:markup -- -w",
    "watch:styles": "watch \"npm run build:styles\" src/less/ --wait=1",
    "watch:scripts": "watch \"npm run build:scripts\" src/js --wait=1",
    "watch:test": "watch \"npm run test\" pubic --wait=1",
    "serve": "http-server public",
    "dev:open": "opener http://localhost:8080",
    "dev": "npm run dev:open & parallelshell \"npm run serve\" \"npm run watch \""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "clean-css": "^3.4.11",
    "http-server": "^0.9.0",
    "inline-svg": "^2.2.0",
    "jade": "^1.11.0",
    "jquery": "^2.2.3",
    "jshint": "^2.9.1",
    "less": "^2.6.1",
    "live-reload": "^1.1.0",
    "mocha": "^2.4.5",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-font-magician": "^1.4.0",
    "rimraf": "^2.5.2",
    "should": "^8.3.0",
    "uglifyjs": "^2.4.10",
    "watch": "^0.17.1"
  },
  "jshintConfig": {
    "esversion": "6",
    "noyield": "true",
    "funcscope": "true"
  }
}
